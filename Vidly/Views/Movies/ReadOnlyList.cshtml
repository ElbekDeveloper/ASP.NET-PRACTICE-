@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movie List</h2>
<table class="table" id="movies">
    <thead>
        <tr>
            <th>
                Customer Name
            </th>
            <th>
                Genre Name
            </th>
            <th>
                Release Date
            </th>
            <th>
                Number In Stock
            </th>
        </tr>
    </thead>
    <tbody>
    </tbody>

</table>
@section    scripts{
    <script>
        $(document).ready(function () {
            var table = $("#movies").DataTable(
                {
                    ajax: {
                        url: "/api/movies",
                        dataSrc: ""
                    },
                    columns: [
                        {
                            data: "name"
                        },
                        {
                            data: "genre.name"
                        },
                        {
                            data: "releaseDate"
                        },
                        {
                            data: "numberInStock"
                        },

                    ]
                })
        });
    </script>
    }