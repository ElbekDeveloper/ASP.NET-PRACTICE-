@model List<Vidly.Models.Customer>
@{
    ViewBag.Title = "Index";
}
<style>
    .delete-section {
        display: inline;
    }
</style>
<hr />
@Html.ActionLink("Add New Customer", "Create","Home", new { @class = "btn btn-primary" })
<hr />
@if (Model.Count == 0)
{
    <h2>Sorry, you don't have any customers!</h2>
}
else
{
    <table id="customers" class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Customer</th>
                <th>Discount</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                       @Html.ActionLink(item.Name, "Details", new {id = item.Id} )
                    </td>
                    <td>
                        @item.MembershipType.DiscountRate %
                    </td>
                    <td>
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { onclick = "return confirm('Are you sure you want to delete');", @class = "btn btn-danger" })
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" })

                    </td>
                </tr>
            }

        </tbody>
    </table>

}


